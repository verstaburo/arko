mixin popup-communication()
  +popup.popup-communication&attributes(attributes)
    +popup-title СВЯЗАТЬСЯ С ОПЕРАТОРОМ
    +form#form-communication
      +e.row
        +e.LABEL.wrapper
          +e.label ваше имя:
          +input.form__input(type="text" name="name" required)
          +e.error
      +e.row
        +e.LABEL.wrapper
          +e.label e-mail:
          +input.form__input(type="text" name="email" required data-type="email")
          +e.error
      +e.row
        +e.LABEL.wrapper
          +e.label телефон:
          +input.form__input(type="tel" name="phone" required data-type="tel")
          +e.error
      +e.row
        +e.LABEL.wrapper_wide
          +e.label_top._short текст:
          +textarea.form__textarea(name="message" required)
          +e.error
      +e.row
        +button('button').js-verify(type="submit") ОТПРАВИТЬ
